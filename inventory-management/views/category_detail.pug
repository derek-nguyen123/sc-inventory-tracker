extends layout

block content

  h1 Category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')
    ul
      each item in category_items
        li 
          a(href=item.url) #{item.name} 
          a(href=item.brand.url) (#{item.brand.brand_name}) 
          | (#{item.count})
      else 
        li No items being tracked.
  hr
  p 
    a(href=category.url+'/delete') Delete Category
  p 
    a(href=category.url+'/update') Edit Category