extends layout

block content

  h1 Brand: #{brand.brand_name}

  div(style='margin-left:20px;margin-top:20px')
    ul
      each item in brand_items
        li 
          a(href=item.url) #{item.name} 
          | (#{item.count})
      else 
        li No items being tracked.
  hr
  p 
    a(href=brand.url+'/delete') Delete Brand
  p 
    a(href=brand.url+'/update') Edit Brand