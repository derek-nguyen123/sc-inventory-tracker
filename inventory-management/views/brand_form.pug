extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='brand_name') Brand:
      input#brand_name.form-control(type='text', placeholder='Brand Name' name='brand_name' value=(undefined===brand ? '' : brand.brand_name))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg